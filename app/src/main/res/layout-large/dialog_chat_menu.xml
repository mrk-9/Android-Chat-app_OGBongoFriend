<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_camera_chat_menu"
            style="@style/tv_chat_menu_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:drawableTop="@drawable/button_camera"
            android:text="@string/text_camera" />

        <TextView
            android:id="@+id/tv_gellary_chat_menu"
            style="@style/tv_chat_menu_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:drawableTop="@drawable/button_gallery"
            android:text="@string/text_gallery" />

        <TextView
            android:id="@+id/tv_vodeo_chat_menu"
            style="@style/tv_chat_menu_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:drawableTop="@drawable/button_video"
            android:text="@string/text_video" />
    </LinearLayout>

    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_location_chat_menu"
            style="@style/tv_chat_menu_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:drawableTop="@drawable/bottom_bar"
            android:text="@string/text_location" />

        <TextView
            android:id="@+id/tv_file_chat_menu"
            style="@style/tv_chat_menu_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:drawableTop="@drawable/button_file"
            android:text="@string/text_file" />

        <TextView
            android:id="@+id/tv_contact_chat_menu"
            style="@style/tv_chat_menu_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:drawableTop="@drawable/button_contacts"
            android:text="@string/text_contact" />
    </LinearLayout>

</LinearLayout>